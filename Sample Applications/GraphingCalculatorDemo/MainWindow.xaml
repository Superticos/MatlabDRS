<Window x:Class="GraphingCalculatorDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Graphing Calculator Demo" Height="350" Width="525">
    <Grid>
        <TextBlock Text="Graphing Calculator Demo"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top"
                   FontSize="24"
                   Margin="0,20,0,0"/>
        <Button Content="Plot Example"
                Width="120"
                Height="40"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Click="PlotExample_Click"/>
        <Canvas Name="PlotCanvas"
                Width="400"
                Height="200"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                Margin="0,0,0,20"
                Background="White"/>
    </Grid>
</Window>